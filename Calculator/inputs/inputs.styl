color_1 = #747ea6;

color_2 = #4d4d4d;
color_3 = #999999;
color_3_hover = #ccc;
color_4 = #808080;
color_4_hover = #bbb;
color_5 = #333;
color_5_hover = #777;

color_6 = #b3b3b3;
color_7 = #e6e6e6;

.calculator__inputsWrap {
  flex-basis: 100%;
  margin-bottom: 15px;

  .calculator__inputs {
    .calculator__input-line {
      position: relative;

      .calculator__input {
        display: block;
        width: 100%;
        border-radius: 5px;
        padding: 5px 35px;
        border: solid 1px color_3_hover;
        background:url(/images/input-mark-red.svg) no-repeat 5px center;
        background-size: 20px auto;
        margin-bottom: 10px;

      }
      .calculator__input-cross {
        position: absolute;
        //z-index: 2;
        top: 6px;
        right: 5px;
        width: 20px;
        cursor: pointer;
        display: none;
      }
    }
  }
  .calculator__routeButtons {
    display: flex;
    justify-content: flex-start;
    margin-top: 10px;

    .calculator__resetRoute {
      margin-left: 20px;

      &.active {
        color: color_1;
        cursor: pointer;
        text-decoration: underline;
      }
    }
  }

  .calculator__addPoint {
    color: color_6;

    &.active {
      color: color_1;
      cursor: pointer;
      text-decoration: underline;
    }
  }
}
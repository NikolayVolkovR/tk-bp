.order-window {
  * {
    outline: none;
  }
  header {
    text-align:center;
    font-size: 26px;
    color: color_2;
  }
  .subheader {
    text-align: center;
    font-size: 17px;
    color: color_2;
    margin-top: 20px;
    line-height: 1.8;
  }

  .order-window__input {
    width:100%;
    padding: 13px;
    border-radius: 5px;
    border: solid 1px color_green_2;
    font-size: 16px;
    margin-top: 20px;
  }
  .order-window__input-complete {
    border-color: color_green_3;
  }

  .order-window__button {
    margin-top: 20px;
    border: 0;
    border-radius: 5px;
    background: color_4;
    color: #fff;
    padding: 13px;
    width: 100%;
    font-size: 16px;
    cursor: default;
  }
  .order-window__button-enable {
    background: color_green_3;
    cursor: pointer;
  }
  .order-window__car {
    margin-top: 10px;
    padding: 10px 0;
    border-bottom: solid 1px color_1;
    border-top: solid 1px color_1;
    text-align: center;

    div {
      text-align: center;
      font-size: 16px;
    }
  }
}
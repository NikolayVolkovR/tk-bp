.zones-control {
  display: flex;
  * {
    outline: none;
  }

  .zones-control__map {
    flex-basis: calc(100% - 170px);
    min-height: 500px;
  }
  .zones-control__menu {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    border-radius: 10px;
    margin-left: 20px;
    border: solid 1px color_3;
    flex-basis: 150px;
    background-color: #eee;
    padding: 10px;

    .zones-control__createButton {
      background: color_1;
      color: #fff;
      text-align: center;
      padding: 10px;
      border-radius: 5px;
      cursor: pointer;
    }
    .zones-control__createSection {
      margin-top: 5px;
      background : color_3;
      border-radius: 5px;
      padding: 10px;

      input {
        width: 100%;
        padding: 10px;
        border: solid 1px color_5;
        border-radius: 5px;
      }
      button {
        width: 100%;
        padding: 10px;
        border-radius: 5px;
        background: color_green_1;
        border: 0;
        margin-top: 10px;
      }
    }
    .zones-control__menuItems {
      .zones-control__menuItem {
        margin-top: 15px;

        &.opened {
          .zones-control__menuItemInput {
            display: block;
          }
          .zones-control__menuItemColor {
            display: block;
          }
        }

        .zones-control__menuItemName {
          cursor: pointer;
        }
        .zones-control__menuItemInput {
          display: none;
          border-radius: 5px;
          padding: 5px;
          border: solid 1px color_4_hover;
          width: 100%;
        }
        .zones-control__menuItemColor {
          display: none;
          margin-top: 5px;
          width: 30px;
          height: 30px;
          cursor: pointer;
        }
      }
    }

    .zones-control__saveButton {
      margin-top: 20px;
      background: color_green_2;
      color: #fff;
      text-align: center;
      padding: 10px;
      border-radius: 5px;
      align-self: flex-end;

      &.enable {
        cursor: pointer;
        background: color_green_3;
      }
    }

  }
}

.chooseCar__carTypes {
  flex-basis: 29%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;

  @media only screen and (max-width: 930px) {
    flex-basis: 46%;
  }
  @media only screen and (max-width: 560px) {
    order: 0;
    flex-basis: 100%;
  }

  .chooseCar__carTypes-header {
    flex-basis: 100%;
    font-size: 20px;
    font-weight: bold;
    text-align: center;
    margin-bottom: 10px;

    @media only screen and (max-width: 930px) {
      text-align: left;
    }
  }

  .chooseCar__carTypes-icons {
    flex-basis: 100%;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    align-items: stretch;
    margin-top: 15px;
    border: solid 1px #fff;
    border-radius: 5px;

    &.active {
      border-color: color_4;
      margin-bottom: 10px;
      padding: 10px;
    }
  }
  .chooseCar__carTypes-half {
    flex-basis: 48%;

    .chooseCar__carTypes-half-header {
      font-weight: bold;
      font-size: 15px;
    }

    .cCheckbox {
      margin-top: 2px;
    }
  }
}
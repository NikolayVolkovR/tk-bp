.chooseCar__carTypes-icon {
  flex-basis: 33%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-end;
  margin-bottom: 10px;
  padding-bottom: 10px;
  cursor: pointer
  border: solid 1px #fff;
  border-radius: 5px;

  &.disabled {
    opacity: 0.3;
    cursor: default;

    &:hover {
      border-color: #fff;
    }
  }
  &.active {
    border-color: color_4;
    cursor: default;
    &:hover {
      border-color: color_4;
    }
  }

  &:hover {
    border-color: color_4_hover;
  }

  img {
    width: 75%;
    margin: 10px 0 4px 0;
  }
  .name {
    text-align: center;
    height: 40px;
    overflow: hidden;
  }
}
.chooseCar__carDescription {
  flex-basis: 31%;
  overflow: hidden;

  @media only screen and (max-width: 930px) {
    flex-basis: 46%;
  }
  @media only screen and (max-width: 560px) {
    order: 2;
    flex-basis: 100%;
    margin-top: 10px;
  }

  .chooseCar__carDescription-photoBlock {
    display: flex;
    justify-content: space-between;
    align-items: center;

    &.disabled {
      .chooseCar__carDescription-prev, .chooseCar__carDescription-next {
        opacity: 0.4;
        cursor: default;
      }
    }
    .chooseCar__carDescription-prev, .chooseCar__carDescription-next {
      width: 7%;
      cursor: pointer;
    }
    .chooseCar__carDescription-photo {
      width: 70%;
    }
  }
  .chooseCar__carDescription-name {
    font-size: 18px;
    font-weight: bold;
    text-align: center;
    margin: 10px 0;
  }
  .cSlider {
    .cSlider__slidesWrap {
      border-top: solid 1px color_3_hover;
      border-bottom: solid 1px color_3_hover;
      padding: 10px 0;
    }
  }
  .chooseCar__carDescription-params {
    display: flex;
    justify-content: space-between;
    margin-top: 10px;

    .chooseCar__carDescription-params-half {
      flex-basis: 48%;

      .chooseCar__carDescription-params-half-header {
        font-weight: bold;
        margin-bottom: 5px;
      }
      .chooseCar__carDescription-params-half-line {
        display: flex;
        justify-content: space-between;
        margin: 3px 0;

        .chooseCar__carDescription-params-half-line-name {
          flex-basis: 50%;
        }
        .chooseCar__carDescription-params-half-line-value {
          flex-basis: 50%;
        }
      }
    }
    .chooseCar__carDescription-params-order-btn {
      flex-basis: 48%;
      display: flex;
      justify-content: center;
      align-items: center;
      font-size: 20px;
      color: #fff;
      background: color_1;
      border-radius: 5px;
      text-transform: uppercase;
      cursor: pointer;
    }
  }
  .price {
    color: color_1;
    font-weight: bold;
    font-size: 17px;
  }
}
color_1 = #747ea6;

color_2 = #4d4d4d;
color_3 = #999999;
color_3_hover = #ccc;
color_4 = #808080;
color_4_hover = #bbb;
color_5 = #333;
color_5_hover = #777;

color_6 = #b3b3b3;
color_7 = #e6e6e6;

color_8 = #78a576;
color_8_hover = #89bd87;
color_9 = #009245;

.banner {
  display: flex;
  position: relative;
  overflow: hidden;

  .banner__background {
    position: absolute;
    top: 0;
    left: 0;
    //right: 0;
    //bottom: 0;
  }
  .banner__shadow {
    left: 0;
    top: 0;
    background : #ececec;
    position: absolute;
    width: 100%;
    height: 100%;
  }

  .banner__board {
    position: absolute;
    top: 20px;
    left: 20px;
    width: 400px;
    height: calc(100% - 40px);

    @media only screen and (max-width: 480px) {
      top: 10px;
      left: 10px;
      width: 300px;
      height: calc(100% - 20px);
    }
    @media only screen and (max-width: 360px) {
      width: 260px;
      height: calc(100% - 20px);
    }

    .banner__board-shadow {
      position: absolute;
      top: 0;
      left: 0;
      height: 100%;
      width: 100%;
      background: #fff;
      opacity: 0.9;
    }
    .banner__board-content {
      position: absolute;
      top: 0;
      left: 0;
      padding: 20px;
      color: color_2;
      font-size: 16px;

      @media only screen and (max-width: 480px) {
        font-size: 14px;
      }

      @media only screen and (max-width: 360px) {
        padding: 15px;
      }

      .banner__board-header-big{
        font-size: 26px;
        font-weight: 100;
        text-transform: uppercase;
        color: color_1;
      }

      .banner__board-header-big2{
        font-size: 28px;
        font-weight: 100;
        text-transform: uppercase;
        color: color_1;
        margin-bottom: 10px;
      }

      .banner__board-text-example {
        text-transform : uppercase;
        font-weight: bold;
        color: color_1;
        font-size: 20px;
      }

      .banner__board-header-hint {
        font-size: 20px;
        color: color_3;
        margin-top: 14px;
      }

      .banner__board-text-example-item {
        margin-top: 8px;
        margin-left: 20px;
        font-size: 17px;
      }

      .banner__board-header {
        font-size: 24px;

        @media only screen and (max-width: 480px) {
          font-size: 20px;
        }
      }

      .banner__board-sub-header {
        margin-top: 10px;
        font-size: 19px;

        @media only screen and (max-width: 360px) {
          margin-top: 5px;
          font-size: 16px;
        }
      }

      .banner__board-text {
        margin-top: 20px;

        ul {
          margin: 0;
          padding: 0 20px;

          li {
            margin-top: 7px;
          }
        }

        @media only screen and (max-width: 480px) {
          margin-top: 15px;

          ul {
            padding: 0 15px;
          }
          li {
            margin-top:5px;
          }
        }
        @media only screen and (max-width: 360px) {
          margin-top: 10px;

        }
      }
    }
  }
}
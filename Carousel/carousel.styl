.carousel {

  .carousel__bone-shadow {
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    background: color_7;
    animation: boneShadow 600ms infinite;
  }

  .carousel__wrap {
    overflow: hidden;

    .carousel__ribbon {
      overflow: hidden;
      display: flex;
      align-content: center;

      .carousel__item {
        //margin: 0 15px;
        position: relative;

        .carousel__item-bone-shadow {
          position: absolute;
          left: 0;
          top: 0;
          right: 0;
          bottom: 0;
          background: color_7;
          animation: boneShadow 600ms infinite;
        }
      }
    }
  }
}

@keyframes boneShadow {
  //from {opacity: 1;}
  50% {opacity: 0.6;}
  //to {opacity: 1;}
}
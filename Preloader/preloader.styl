.preloader {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 999999;
  width: 100%;
  height: 100%;
  display: none;

  .preloader__shadow {
    position: absolute;
    top: 0;
    left: 0;
    z-index: 999999;
    width: 100%;
    height: 100%;
    background: #fff;
    opacity: 0.9;
  }
  .preloader__root {
    display: flex;
    justify-content: center;
    align-items: center;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 999999;
    width: 100%;
    height: 100%;

    .preloader__content {
      position: relative;
      width: 300px;
      height: 100px;
      overflow: hidden;

      .preloader__background-wrap {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        padding-bottom: 2px;


        .preloader__background {
          height: 100%;
          display: flex;
          //justify-content: center;
          align-items: flex-end;
        }
        .preloader__background-img {

        }
      }
      .preloader__car {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: flex-end;
        align-items: center;

        .preloader__car-top {
          width: 25%;
          margin-bottom: -8px;//-4.1%;//-8px;
          z-index: 1;
        }
        .preloader__car-wheels {
          margin-left: 0.8%;//2.5px;
          width: 24.7%;
          z-index: 2;
        }
      }
    }
  }
}
